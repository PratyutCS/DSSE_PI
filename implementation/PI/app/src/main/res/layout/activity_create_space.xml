<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_main">

    <include layout="@layout/toolbar_luxury"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_luxury"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Database Name"
                android:textColor="@color/luxury_gold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etDbName"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_input_field"
                android:hint="e.g. MySecureSpace"
                android:textColorHint="@color/text_dim"
                android:textColor="@color/text_light"
                android:paddingHorizontal="16dp"
                android:inputType="text"
                android:layout_marginBottom="32dp"/>

            <Button
                android:id="@+id/btnProceed"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="INITIALIZE"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@drawable/bg_button_gold"/>
                
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:indeterminateTint="@color/luxury_gold"/>
                
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
